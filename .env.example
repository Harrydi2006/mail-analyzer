# 邮件智能日程管理系统 - 环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# ===========================================
# 应用基础配置
# ===========================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# ===========================================
# 邮件服务配置
# ===========================================
# 邮箱IMAP服务器地址
EMAIL_IMAP_SERVER=imap.gmail.com
# IMAP端口（SSL通常为993）
EMAIL_IMAP_PORT=993
# 邮箱用户名
EMAIL_USERNAME=your-email@example.com
# 邮箱密码或应用专用密码
EMAIL_PASSWORD=your-email-password
# 是否使用SSL（true/false）
EMAIL_USE_SSL=true
# 检查邮件间隔（秒）
EMAIL_CHECK_INTERVAL=300

# ===========================================
# AI服务配置
# ===========================================
# AI服务提供商（openai/claude/local）
AI_PROVIDER=openai
# AI模型名称
AI_MODEL=gpt-3.5-turbo
# API密钥
AI_API_KEY=sk-your-openai-api-key
# 自定义API基础URL（可选）
AI_BASE_URL=https://api.openai.com
# 最大Token数
AI_MAX_TOKENS=1000
# 温度参数（0-2）
AI_TEMPERATURE=0.3

# ===========================================
# Notion集成配置
# ===========================================
# Notion集成Token
NOTION_TOKEN=secret_your-notion-integration-token
# Notion数据库ID（可选，系统可自动创建）
NOTION_DATABASE_ID=your-notion-database-id

# ===========================================
# 数据库配置
# ===========================================
# 数据库类型（sqlite）
DATABASE_TYPE=sqlite
# 数据库文件路径
DATABASE_PATH=data/mail_scheduler.db

# ===========================================
# Redis配置（可选，用于缓存和任务队列）
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# 日志配置
# ===========================================
# 日志级别（DEBUG/INFO/WARNING/ERROR）
LOG_LEVEL=INFO
# 日志文件路径
LOG_FILE=logs/app.log
# 日志文件最大大小
LOG_MAX_SIZE=10MB
# 日志文件备份数量
LOG_BACKUP_COUNT=5

# ===========================================
# 提醒配置
# ===========================================
# 重要事件提前提醒天数（逗号分隔）
REMINDER_IMPORTANT_DAYS=3,1
# 重要事件提前提醒小时数（逗号分隔）
REMINDER_IMPORTANT_HOURS=1
# 重要事件颜色
REMINDER_COLOR_IMPORTANT=#FF4444
# 普通事件颜色
REMINDER_COLOR_NORMAL=#4444FF
# 不重要事件颜色
REMINDER_COLOR_UNIMPORTANT=#44FF44

# ===========================================
# 安全配置
# ===========================================
# 允许的主机（生产环境使用）
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
# CORS允许的源（开发环境使用）
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# 性能配置
# ===========================================
# 工作进程数（生产环境）
WORKERS=4
# 每个进程的线程数
THREADS=2
# 请求超时时间（秒）
TIMEOUT=30

# ===========================================
# 开发配置
# ===========================================
# 是否启用调试模式
DEBUG=true
# 是否重载代码
RELOAD=true
# 监听主机
HOST=0.0.0.0
# 监听端口
PORT=5000